<h1>Movies</h1>

<table border=1>
  <tr>
    <th>Poster</th>
    <th>Title</th>
    <th>Release year</th>
    <th>Actions</th>
  </tr>
  
  <% @movies.each do |movie| %>
    <tr>
      <td><%= image_tag movie.poster, :style => "width: 120px;" rescue nil %></td>
      <td><%= link_to movie.title, movie %></td>
      <td><%= movie.year %></td>      
      <td><%= link_to "Edit", edit_movie_path(movie) %> / <%= link_to "Delete", movie_path(movie),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

</br>
<%= link_to "New Movie", new_movie_path %>
